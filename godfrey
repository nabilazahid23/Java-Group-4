class Godfrey extends Boss {
    public Godfrey() {
        super("Godfrey", 100, 20, 30);
    }

    public int getRandomDamage() {
        return new Random().nextInt(maxDamage - minDamage + 1) + minDamage;
    }

    public void enterSecondPhase() {
        if (!secondPhaseTriggered) {
            secondPhaseTriggered = true;
            System.out.println("Godfrey becomes Hoarah Loux! He throws off his armor and fights like a beast!");
            this.minDamage += 15;
            this.maxDamage += 20;
        }
    }
}
